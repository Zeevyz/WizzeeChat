<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wizzee.whatsappclone">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_wizzee"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_wizzee_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.wizzee.whatsappclone.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.wizzee.whatsappclone.MainPageActivity" />
        <activity android:name="com.wizzee.whatsappclone.FindUserActivity" />
        <activity android:name="com.wizzee.whatsappclone.ChatActivity"></activity>
    </application>

</manifest>